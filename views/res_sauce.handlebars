<section>
    <h2>There are {{sauces.length}} sauces in this restaurant</h2>
    <article class = "clearfix item-container block">
        <h2>{{sauces.name}}</h2>
        <h3>{{sauces.location}}</h3>
        {{#each sauces.Sauces}}
            <h4>{{name}}</h4>
            <img class="item-img" src="{{image}}" />
        {{/each}}

    </article>
</section>